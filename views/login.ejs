<%- include('partials/header', { pageTitle: pageTitle, isAuthenticated: false, name: null }) %>

<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 70vh;">
  <h2 class="mb-4">
    <%= pageTitle %>
  </h2>

  <% if (typeof error !== 'undefined' && error) { %>
    <p class="text-danger mb-3 text-center">
      <%= error %>
    </p>
  <% } %>

  <form action="/loginSubmit" method="post" class="w-100" style="max-width: 400px;">
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input id="email" name="email" type="email" class="form-control" placeholder="your.email@example.com" required>
    </div>
    <div class="mb-4">
      <label for="password" class="form-label">Password:</label>
      <input id="password" name="password" type="password" class="form-control" placeholder="Your Password" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Log In</button>
  </form>

  <p class="mt-3">Don't have an account? <a href="/signup">Sign Up</a></p>
</div>

<%- include('partials/footer') %>
