<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width,
    initial-scale=1.0"
    />
    <title><%= pageTitle %> Assgn2</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Assignment 2</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link <%= pageTitle === 'Welcome' ? 'active' : '' %>"
                aria-current="page"
                href="/"
                >Home</a
              >
            </li>
            <% if (isAuthenticated) { %>
            <li class="nav-item">
              <a
                class="nav-link <%= pageTitle === 'Members Area' ? 'active' : '' %>"
                href="/members"
                >Members</a
              >
            </li>
            <% if (currentUser && currentUser.user_type==='admin' ) { %>
            <li class="nav-item">
              <a
                class="nav-link <%= pageTitle === 'Admin Panel' ? 'active' : '' %>"
                href="/admin"
                >Admin</a
              >
            </li>
            <% } %> <% } %>
          </ul>
          <ul class="navbar-nav">
            <% if (isAuthenticated) { %>
            <li class="nav-item">
              <span class="navbar-text me-3 text-warning">
                Hello, <%= currentUser.name %> (<%= currentUser.user_type %>)
              </span>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-warning" href="/logout">Logout</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a
                class="nav-link <%= pageTitle === 'Log In' ? 'active' : '' %>"
                href="/login"
                >Login</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= pageTitle === 'Sign Up' ? 'active' : '' %>"
                href="/signup"
                >Sign Up</a
              >
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="messages">
        <% if (typeof query !=='undefined' && query.success) { %>
        <div
          class="alert alert-info alert-dismissible fade show"
          role="alert"
        >
          <%= query.success %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %> <% if (typeof query !=='undefined' && query.error) { %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%= query.error %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %> <% if (typeof messages !=='undefined' && messages.success) { %>
        <div
          class="alert alert-info alert-dismissible fade show"
          role="alert"
        >
          <%= messages.success %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %> <% if (typeof messages !=='undefined' && messages.error) { %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%= messages.error %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
