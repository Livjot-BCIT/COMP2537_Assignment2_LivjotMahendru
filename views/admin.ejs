<%- include('partials/header', { pageTitle: pageTitle, messages: messages }) %>

    <h2 class="mb-4">User Management</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>User Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <%- include('partials/user', { user: user, currentUserId: currentUser.id.toString() }) %>
                        <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('partials/footer') %>