<%- include('partials/header', { pageTitle: pageTitle, isAuthenticated: false, name: null }) %>

    <h2>
        <%= pageTitle %>
    </h2>

    <% if (typeof error !=='undefined' && error) { %>
        <p class="error-message">
            <%= error %>
        </p>
        <% } %>

            <form action="/signupSubmit" method="post">
                <div>
                    <label for="name">Name:</label>
                    <input id="name" name="name" type="text" placeholder="Your Full Name"
                        value="<%= typeof formData !== 'undefined' && formData.name ? formData.name : '' %>" required>
                </div>
                <div>
                    <label for="email">Email:</label>
                    <input id="email" name="email" type="email" placeholder="your.email@example.com"
                        value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>" required>
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input id="password" name="password" type="password" placeholder="Create a Password" required>
                </div>
                <br>
                <button type="submit">Sign Up</button>
            </form>
            <p>Already have an account? <a href="/login">Log In</a></p>

            <%- include('partials/footer') %>